<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".berita.homeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--Top toolbar-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relayout1"
            >
            <include layout="@layout/layout_toolbar" android:id="@+id/toolbar"/>

        </RelativeLayout>

        <!--isi konten-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relayout2"
            android:layout_below="@+id/relayout1"
            >
            <include layout="@layout/layout_center_viewpager"/>

        </RelativeLayout>


        <!--navigasi bawah-->

        <include layout="@layout/layout_bottom_nav"

            />

    </RelativeLayout>

</RelativeLayout>