<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    tools:context=".MenuActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/layout_cekung">

    <TextView
        android:id="@+id/logoMoto"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20pt"
        android:text="E-RT"
        android:textColor="@color/white"
        android:textStyle="bold"
       android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

                <Button
                    android:id="@+id/menuBerita"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:background="@drawable/bt_bg_clr"
                    android:layout_height="80dp"
                    android:padding="10dp"
                    android:drawableTop="@drawable/ic_brita"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:text="Berita/Pengumuman"
                    android:textAllCaps="false"
                    />

                <Button
                      android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:background="@drawable/bt_bg_clr"
                    android:layout_height="80dp"
                    android:drawableTop="@drawable/ic_aspirasi"
                    android:layout_weight="1"
                    android:text="Aspirasi Warga"
                    android:textSize="12dp"
                    android:textAllCaps="false"
                    android:padding="10dp"



                    />



        </LinearLayout>


        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <Button
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/bt_bg_clr"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/ic_gallery"
                android:layout_weight="1"
                android:text="Gallery Kegiatan"
                android:textSize="12dp"
                android:padding="10dp"
                android:textAllCaps="false"
                />

            <Button
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:background="@drawable/bt_bg_clr"
                android:layout_height="80dp"
                android:drawableTop="@drawable/ic_kas"
                android:textAllCaps="false"
                android:textSize="12dp"
                android:text="Kas Warga"
                android:padding="10dp"
                android:layout_weight="1"



                />



        </LinearLayout>

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <Button
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/bt_bg_clr"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textSize="12dp"
                android:drawableTop="@drawable/ic_downlad"
                android:padding="10dp"
                android:text="Download Surat"
                />

            <Button
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:textAllCaps="false"
                android:textSize="12dp"
                android:padding="10dp"
                android:drawableTop="@drawable/ic_about"
                android:background="@drawable/bt_bg_clr"
                android:text="Tentang Aplikasi"
                android:layout_weight="1"



                />



        </LinearLayout>



    </LinearLayout>




</RelativeLayout>